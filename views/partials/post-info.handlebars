<article class="post">
    <div class="whole-post">
        <div class="info-section">
            <div class="post-name">
                <h2>{{title}}</h2>
            </div>
            <div class="created_by">
                <p id="comment-subtitle">
                    Posted by <b>{{user.username}}</b> on <b>{{formatDate created_at}}</b>
                </p>
            </div>
        </div>
        <div class="content-section">
            <p>{{content}}</p>
        </div>
    </div>
</article>